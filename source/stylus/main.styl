@font-face
  font-family: "Averta Bold"
  src: url('../fonts/Averta Cyrillic Bold.woff'), url('../fonts/Averta Cyrillic Bold.woff2')
  font-display: swap
@font-face
  font-family: "Averta ExtraBold"
  src: url('../fonts/Averta Cyrillic ExtraBold.woff'), url('../fonts/Averta Cyrillic ExtraBold.woff2')
  font-display: swap
@font-face
  font-family: "Averta Light"
  src: url('../fonts/Averta Cyrillic Light.woff'), url('../fonts/Averta Cyrillic Light.woff2')
  font-display: swap
@font-face
  font-family: "Averta Regular"
  src: url('../fonts/Averta Cyrillic Regular.woff'), url('../fonts/Averta Cyrillic Regular.woff2')
  font-display: swap
@font-face
  font-family: "Averta SemiBold"
  src: url('../fonts/Averta Cyrillic SemiBold.woff'), url('../fonts/Averta Cyrillic SemiBold.woff2')
  font-display: swap

@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "Averta Bold"
  font-weight: 700
  line-height: 120%
  color $color-dark-blue

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

.main
  flex: 1

.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1220px
