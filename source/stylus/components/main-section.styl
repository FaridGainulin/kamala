.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color $color-light-green

  &__container
    position relative
    z-index 1
    padding 12px 0 0 0
    +above($breakpoints.sm)
      padding 12px 0 60px 0
    +above($breakpoints.md)
      padding 12px 0 80px 0
    +above($breakpoints.xxl)
      padding 12px 0 116px 0

  &__title,
  &__sub-title
    text-align: center
    color: $color-dark-blue
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 30px 0 0 0
    +above($breakpoints.md)
      padding 40px 0 0 0
    +above($breakpoints.xxl)
      padding 60px 0 0 0

  &__sub-title
    padding 16px 0 20px 0
    +above($breakpoints.sm)
      padding 16px  0 25px 0
    +above($breakpoints.md)
      padding 16px  0 30px 0
    +above($breakpoints.xxl)
      padding 16px 0 40px 0

  &__line
    width 50px
    height: 2px
    background-color $color-pink
    margin 0 auto
    +above($breakpoints.sm)
      width 71px
      margin 0
    
  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 8px
    padding-top 20px
    text-align: center
    +above($breakpoints.sm)
      justify-content start
      width 300px
    +above($breakpoints.md)
      width 600px
      flex-direction: row
      flex-wrap: wrap
      padding-top 30px
    +above($breakpoints.xxl)
      text-align: start
      gap: 10px
      padding-top 40px

  &__privacy
    color: $color-pink
    text-decoration: underline
    cursor pointer

  &__privacy-text
    +above($breakpoints.xxl)
      padding-left 35px

  &__img
    width 300px
    height: auto
    margin: 0 auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 400px;
      bottom: 0;
      right: -65px;
    +above($breakpoints.md)
      width: 510px;
      bottom: 0;
      right: -50px;
    +above($breakpoints.xxl)
      width: 670px;
      bottom: 0;
      right: -146px;

  &__img-bg-large
    position: absolute
    z-index -1
    bottom: 0
    right: -27%
    width 300px
    height: auto
    +above($breakpoints.sm)
      width 300px
      right: -21%
    +above($breakpoints.md)
      width 400px
      right: -18%
    +above($breakpoints.xxl)
      width 551px
      right: -27%

  &__img-bg-small
    position: absolute
    z-index -1
    top: 10%;
    left: -10%;
    width 50px
    height: auto
    +above($breakpoints.sm)
      top: 14%;
      width 70px
    +above($breakpoints.md)
      width 90px
    +above($breakpoints.xxl)
      top: 13%;
      left: -12%;
      width 112px

.main-item
  width 280px
  +above($breakpoints.md)
    width 267px
