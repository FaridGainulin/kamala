.thanks-section
  display: flex
  flex-direction: column
  justify-content center
  align-items: center
  height: 100%

  &__container
    padding 0 15px
    color: #fff
    max-width: 850px
    margin: 0 auto
    text-align: center

  &__inner-text
    padding: 20px 0 40px 0

  &__container a
    max-width 300px
    margin: 0 auto

.thanks-page
  background-image: url("../images/invest-section-bg.jpg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover

.wrapper-header-thanks
  padding 30px 0

.header-thanks__connection
  display: flex
  align-items: center
  gap: 8px
  flex-direction: column
  +above($breakpoints.md)
    padding-top 25px
    gap: 24px
    flex-direction: row
  +above($breakpoints.xxl)
    padding-left 30px