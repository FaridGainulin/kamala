.input
  height: 50px
  width 100%
  padding: 0 36px;
  font-family: "Averta Light"
  font-weight: 300
  font-size: 16px;
  line-height: 140%
  color: #606168
  border: 1px solid #C9C9C9
  border-radius: 33px;
  background: #fff
  position relative

  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1
  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    background: #323232;
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: #fff
    font-weight: bold
    border-radius: 8px
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s
  &:hover
    border 1px solid #FED149
  &:focus
    color: #02082C
    caret-color: #02082C
    border 1px solid #FED149
    box-shadow: 3px 3px 20px 0px #FED149
    ::placeholder
      color: #606168
  &::placeholder
    color: #606168
  +above($breakpoints.sm)
    height: 55px
    font-size: 17px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 63px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background-color $color-white
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 22px 36px
    resize: none
    height: 85px
    border-radius: 10px
    width 280px
    +above($breakpoints.sm)
      height: 85px
      width 370px
    +above($breakpoints.md)
      width 740px
      height: 85px
    +above($breakpoints.xxl)
      width 821px
      height: 85px

  &--secondary
    border: 1px solid #fff
