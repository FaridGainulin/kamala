.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color $color-light-green

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 70px 0 70px 0
    +above($breakpoints.md)
      padding 100px 0 100px 0
    +above($breakpoints.xxl)
      padding 141px 0 140px 0

  &__title
    text-align: center
    line-height: 117% !important
    +above($breakpoints.sm)
      text-align: start

  &__text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 16px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 16px 0 30px 0
    +above($breakpoints.md)
      padding 16px 0 44px 0
    +above($breakpoints.xxl)
      padding 16px 0 54px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 8px
    padding-top 20px
    text-align: center
    +above($breakpoints.sm)
      justify-content start
      width 300px
    +above($breakpoints.md)
      width 600px
      flex-direction: row
      flex-wrap: wrap
      padding-top 20px
    +above($breakpoints.xxl)
      text-align: start
      gap: 10px
      padding-top 28px

  &__img
    width 300px
    height: auto
    margin 20px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 337px;
      bottom: 66px;
      right: -49px;
    +above($breakpoints.md)
      width: 420px;
      bottom: 105px;
      right: -31px;
    +above($breakpoints.xxl)
      width: 584px;
      bottom: 126px;
      right: -160px;
