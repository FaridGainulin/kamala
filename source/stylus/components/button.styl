.btn
  height: 50px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #53370B
  border-radius: 33px
  // text-transform: uppercase
  box-shadow: inset 0 -3px 0 0 rgba(0, 0, 0, 0.25);
  background: linear-gradient(180deg, #ffd952 0%, #f29509 100%);
  font-family: "Averta ExtraBold"
  font-weight: 800
  font-size: 14px
  line-height: 140%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 14px;
    height: 55px;
  +above($breakpoints.md)
    font-size: 15px;
  +above($breakpoints.xxl)
    font-size: 16px;
    height: 63px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

  &--call-me
    width 156px
    height: 40px !important
    font-family: "Averta SemiBold"
    font-size: 14px !important
    cursor pointer
