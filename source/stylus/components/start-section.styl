.start-section
  background-image: url('../images/start-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #F2F3F2

  &__header
    background-image: url('../images/start-section-header-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #E66D19
    height: 20px
    +above($breakpoints.sm)
      height: 40px
    +above($breakpoints.md)
      height: 80px
    +above($breakpoints.xxl)
      height: 104px

  &__container
    position relative
    z-index 1
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 120px 0
    +above($breakpoints.md)
      padding 80px 0 180px 0
    +above($breakpoints.xxl)
      padding 108px 0 215px 0

  &__title
    padding 0 0 20px 0
    color: $color-blue
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      padding 0 0 65px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 103px
    border-radius: 20px
    background-color #fff
    padding: 16px 10px 19px 22px
    text-align: center
    +above($breakpoints.sm)
      height: 110px
      text-align: start
      padding: 16px 10px 16px 14px
      width 174px !important
    +above($breakpoints.md)
      height: 147px
      width 226px !important
      padding: 16px 10px 19px 22px
    +above($breakpoints.xxl)
      width 280px !important
      border-radius: 30px

  &__bottom
    position relative
    color: #fff
    background-image: url('../images/start-section-bottom-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #2F2483
    border-radius: 20px
    padding 20px 10px 20px 10px
    margin-top 20px
    +above($breakpoints.sm)
      padding 20px 10px 20px 20px
      margin-top 40px
    +above($breakpoints.md)
      margin-top 70px
      padding 45px 10px 47px 62px
      border-radius: 30px
    +above($breakpoints.xxl)
      margin-top 90px

  &__bottom-title
    text-align: center
    padding-bottom 20px
    +above($breakpoints.sm)
      text-align: start
      padding-bottom 30px

  &__bottom-img
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      height: auto
      right: -119px;
      bottom: -134px;
      width: 430px;
    +above($breakpoints.md)
      right: -163px;
      bottom: -179px;
      width: 600px;
    +above($breakpoints.xxl)
      right: -283px;
      bottom: -359px;
      width: 955px;

.start-item
  width 260px
  margin 0 auto
  +above($breakpoints.sm)
    margin 0
    width 330px
  +above($breakpoints.md)
    width 430px