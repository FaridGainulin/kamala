.form-modal
  &__feedback
    position relative
    border-radius: 20px;
    border: 1px solid #7DBD27
    backdrop-filter: blur(36px);
    background: #02082C95
    // background: linear-gradient(106deg, #E66D19, #2F2483)
    color: $color-white
    padding: 12px
    box-shadow: 0px 2px 22px 0px #B2CC47
    // &:before
    //   content: ''
    //   position: absolute
    //   top: -2px
    //   right: -2px
    //   bottom: -2px
    //   left: -2px
    //   z-index: -1
    //   border-radius: inherit
    //   background: linear-gradient(130deg, #f08427, #000, #000, #f08427);

  &__wrapper
    // border 1px solid $color-yellow
    // border-radius: 10px
    padding 10px
    +above($breakpoints.sm)
      padding 10px
    +above($breakpoints.xxl)
      padding: 10px

  &__info-title
    font-size: 19px;
    margin: 0 0 18px 0
    font-family: "Averta Bold"
    font-weight: 700
    +above($breakpoints.sm)
      font-size: 21px
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      font-size: 23px
    br
      display: block

  &__feedback-item
    max-width: 255px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 280px
    +above($breakpoints.xxl)
      max-width: 343px

  &__feedback-input
    height: 55px
    margin-bottom: 10px
    +above($breakpoints.sm)
      height: 60px
      margin-bottom: 15px
    +above($breakpoints.xxl)
      height: 64px
      margin-bottom: 20px
    .input
      &__field
        height: 100%
        border: none

  &__button
    margin-bottom: 14px
    .btn
      height: 50px
      +above($breakpoints.sm)
        height: 60px
      +above($breakpoints.xxl)
        height: 58px

  &__agree
    font-size: 10px;
    line-height: 13px;
    font-family: "Averta Regular"
    +above($breakpoints.sm)
      font-size: 11px;
      line-height: 13px;
    +above($breakpoints.md)
      font-size: 12px;
      line-height: 14px;
    +above($breakpoints.xxl)
      font-size: 13px;
      line-height: 15px;
    a
      text-decoration: underline
